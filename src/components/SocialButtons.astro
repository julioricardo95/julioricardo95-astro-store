---
const phoneNumber = "+50558567432";

export interface Props {
  productTitle?: string;
  productPrice?: number;
}

const { productTitle, productPrice } = Astro.props;

const whatsappMessage = productTitle && productPrice 
  ? `Hola! Me interesa el producto: ${productTitle} - Precio: $${productPrice}`
  : "Hola! Me interesa conocer m√°s sobre sus productos.";
---

<div class="flex justify-center gap-4 my-8">
  <a 
    href={`https://wa.me/${phoneNumber}?text=${encodeURIComponent(whatsappMessage)}`}
    target="_blank"
    rel="noopener noreferrer"
    class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg flex items-center gap-2 transition-colors duration-300"
  >
    <i class="fab fa-whatsapp text-xl"></i>
    <span>WhatsApp</span>
  </a>
  
  <a 
    href="https://www.facebook.com/julioricardo1995"
    target="_blank"
    rel="noopener noreferrer"
    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg flex items-center gap-2 transition-colors duration-300"
  >
    <i class="fab fa-facebook text-xl"></i>
    <span>Facebook</span>
  </a>
  
  <a 
    href={`tel:${phoneNumber}`}
    class="bg-accent-500 hover:bg-accent-600 text-white px-6 py-3 rounded-lg flex items-center gap-2 transition-colors duration-300"
  >
    <i class="fas fa-phone text-xl"></i>
    <span>Llamar</span>
  </a>
</div>