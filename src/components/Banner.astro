<section class="relative h-96 md:h-[500px] overflow-hidden animate-fade-in bg-gradient-to-br from-primary-600 via-primary-700 to-secondary-500">
  <div class="absolute inset-0 bg-black bg-opacity-30"></div>
  
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-10 left-10 w-20 h-20 bg-white bg-opacity-10 rounded-full animate-float"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-white bg-opacity-10 rounded-full animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-accent-500 bg-opacity-20 rounded-full animate-bounce-slow" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/3 right-1/3 w-12 h-12 bg-secondary-400 bg-opacity-30 rounded-full animate-pulse-slow" style="animation-delay: 0.5s;"></div>
    <div class="absolute bottom-1/3 left-1/3 w-8 h-8 bg-accent-400 bg-opacity-40 rounded-full animate-wiggle" style="animation-delay: 1.5s;"></div>
  </div>
  
  <div class="relative z-10 h-full flex items-center justify-center text-center px-4">
    <div class="max-w-4xl mx-auto animate-slide-up hover:scale-105 transition-transform duration-500">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-lg animate-glow">
        Bienvenido a Nuestra Tienda
      </h1>
      <p class="text-xl md:text-2xl text-white mb-8 opacity-90 drop-shadow-md animate-fade-in" style="animation-delay: 0.3s;">
        Descubre productos de calidad con los mejores precios
      </p>
      <a 
        href="#productos" 
        class="bg-accent-500 hover:bg-accent-600 text-white px-8 py-4 rounded-lg text-lg font-semibold inline-flex items-center gap-2 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-2 hover:scale-110 animate-bounce-slow group"
        style="animation-delay: 0.6s;"
      >
        <i class="fas fa-shopping-cart group-hover:animate-wiggle"></i>
        Ver Productos
      </a>
    </div>
  </div>
</section>