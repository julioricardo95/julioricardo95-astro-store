---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductImageCarousel from '../../components/ProductImageCarousel.astro';
import SocialButtons from '../../components/SocialButtons.astro';
import Footer from '../../components/Footer.astro';
import database from '../../data/database.json';

export function getStaticPaths() {
  return database.products.map(product => ({
    params: { id: product.id.toString() },
    props: { product }
  }));
}

const { product } = Astro.props;
const { id, category, title, images, description, price, featured } = product;

const pageTitle = `${title} - Mi Tienda Online`;
const pageDescription = `${description} Precio: $${price}. Categoría: ${category}. Compra ahora con envío gratuito.`;
const pageImage = images[0];

// Related products (same category, excluding current product)
const relatedProducts = database.products
  .filter(p => p.category === category && p.id !== id)
  .slice(0, 3);
---

<BaseLayout title={pageTitle} description={pageDescription} image={pageImage}>
  <main class="min-h-screen bg-gray-50">
    <!-- Breadcrumb -->
    <nav class="bg-white shadow-sm py-4">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <a href="/" class="hover:text-primary-500 transition-colors duration-300">
            <i class="fas fa-home mr-1"></i>
            Inicio
          </a>
          <i class="fas fa-chevron-right text-gray-400"></i>
          <a href="/#productos" class="hover:text-primary-500 transition-colors duration-300">
            Productos
          </a>
          <i class="fas fa-chevron-right text-gray-400"></i>
          <span class="text-primary-500 font-semibold">{category}</span>
          <i class="fas fa-chevron-right text-gray-400"></i>
          <span class="text-gray-800 font-semibold">{title}</span>
        </div>
      </div>
    </nav>

    <!-- Product Details -->
    <section class="py-12">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Product Images -->
          <div>
            <ProductImageCarousel images={images} title={title} />
          </div>
          
          <!-- Product Info -->
          <div class="space-y-6">
            <div>
              <div class="flex items-center gap-3 mb-4">
                <span class="bg-primary-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                  {category}
                </span>
                {featured && (
                  <span class="bg-accent-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                    <i class="fas fa-star mr-1"></i>
                    Destacado
                  </span>
                )}
              </div>
              
              <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
                {title}
              </h1>
              
              <div class="text-4xl font-bold text-primary-600 mb-6">
                ${price}
              </div>
            </div>
            
            <div class="prose prose-gray max-w-none">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                <i class="fas fa-info-circle text-primary-500 mr-2"></i>
                Descripción del Producto
              </h3>
              <p class="text-gray-600 leading-relaxed text-lg">
                {description}
              </p>
            </div>
            
            <!-- Product Features -->
            <div class="bg-gray-100 rounded-lg p-6">
              <h3 class="text-lg font-semibold text-gray-800 mb-4">
                <i class="fas fa-check-circle text-green-500 mr-2"></i>
                Características
              </h3>
              <ul class="space-y-2 text-gray-600">
                <li class="flex items-center">
                  <i class="fas fa-shipping-fast text-green-500 mr-3"></i>
                  Envío gratuito a todo el país
                </li>
                <li class="flex items-center">
                  <i class="fas fa-shield-alt text-green-500 mr-3"></i>
                  Garantía de 12 meses
                </li>
                <li class="flex items-center">
                  <i class="fas fa-undo text-green-500 mr-3"></i>
                  30 días para devoluciones
                </li>
                <li class="flex items-center">
                  <i class="fas fa-headset text-green-500 mr-3"></i>
                  Soporte técnico 24/7
                </li>
              </ul>
            </div>
            
            <!-- Social Buttons -->
            <div class="pt-6">
              <h3 class="text-lg font-semibold text-gray-800 mb-4 text-center">
                <i class="fas fa-share-alt text-primary-500 mr-2"></i>
                Compartir o Contactar
              </h3>
              <SocialButtons productTitle={title} productPrice={price} />
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Related Products -->
    {relatedProducts.length > 0 && (
      <section class="py-16 bg-white">
        <div class="max-w-6xl mx-auto px-4">
          <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">
            <i class="fas fa-tags text-primary-500 mr-2"></i>
            Productos Relacionados
          </h2>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedProducts.map(relatedProduct => (
              <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="relative">
                  <img 
                    src={relatedProduct.images[0]} 
                    alt={relatedProduct.title}
                    class="w-full h-48 object-cover"
                    loading="lazy"
                  />
                  {relatedProduct.featured && (
                    <div class="absolute top-4 right-4 bg-accent-500 text-white px-2 py-1 rounded-full text-sm font-bold">
                      <i class="fas fa-star mr-1"></i>
                      Destacado
                    </div>
                  )}
                  <div class="absolute top-4 left-4 bg-primary-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                    {relatedProduct.category}
                  </div>
                </div>
                
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-800 mb-3">{relatedProduct.title}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{relatedProduct.description}</p>
                  
                  <div class="flex justify-between items-center mb-4">
                    <span class="text-2xl font-bold text-primary-600">${relatedProduct.price}</span>
                  </div>
                  
                  <a 
                    href={`/producto/${relatedProduct.id}`}
                    class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg transition-colors duration-300 w-full text-center inline-flex items-center justify-center"
                  >
                    <i class="fas fa-eye mr-2"></i>
                    Ver Detalles
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>