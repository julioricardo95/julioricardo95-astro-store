  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const categoryFilter = document.getElementById('category-filter') as HTMLSelectElement;
    const priceFilter = document.getElementById('price-filter') as HTMLSelectElement;
    const sortFilter = document.getElementById('sort-filter') as HTMLSelectElement;

    function updateURL() {
      const url = new URL(window.location.href);
      const params = new URLSearchParams(url.search);

      if (categoryFilter.value) {
        params.set('category', categoryFilter.value);
      } else {
        params.delete('category');
      }

      if (priceFilter.value) {
        params.set('price', priceFilter.value);
      } else {
        params.delete('price');
      }

      if (sortFilter.value && sortFilter.value !== 'featured') {
        params.set('sort', sortFilter.value);
      } else {
        params.delete('sort');
      }

      url.search = params.toString();
      window.location.href = url.toString();
    }

    categoryFilter?.addEventListener('change', updateURL);
    priceFilter?.addEventListener('change', updateURL);
    sortFilter?.addEventListener('change', updateURL);

    // Agregar event listeners para los botones de WhatsApp
    document.querySelectorAll('.add-to-cart').forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const productCard = button.closest('.product-card');
        const productTitle = productCard.querySelector('.product-title a').textContent;
        const productPrice = productCard.querySelector('.current-price').textContent;
        const productDescription = productCard.querySelector('.product-description').textContent;
        
        contactWhatsApp(productTitle, productPrice, productDescription);
      });
    });
  });

  function contactWhatsApp(productName, price, description) {
    const message = `¡Hola! Me interesa este producto:

📱 *${productName}*
💰 Precio: ${price}
📝 ${description}

¿Podrían darme más información y disponibilidad?`;
    
    const phoneNumber = '521234567890'; // Reemplaza con tu número real
    const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
    window.open(whatsappUrl, '_blank');
  }
</script>