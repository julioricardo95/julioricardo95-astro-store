---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer';
import productsData from '../../data/products.json';

// Obtener parámetros de búsqueda
const url = new URL(Astro.request.url);
const searchParams = url.searchParams;
const searchTerm = searchParams.get('search') || '';
const categoryFilter = searchParams.get('category') || '';
const priceFilter = searchParams.get('price') || '';

// Filtrar productos
let filteredProducts = [...productsData];

if (searchTerm) {
  filteredProducts = filteredProducts.filter(product =>
    product.name.toLowerCase().includes(searchTerm.toLowerCase()) ||
    product.description.toLowerCase().includes(searchTerm.toLowerCase()) ||
    (product.tags && product.tags.some(tag => tag.toLowerCase().includes(searchTerm.toLowerCase())))
  );
}

if (categoryFilter) {
  filteredProducts = filteredProducts.filter(product => 
    product.categorySlug === categoryFilter
  );
}

if (priceFilter) {
  const [min, max] = priceFilter.split('-').map(Number);
  filteredProducts = filteredProducts.filter(product => {
    if (max) {
      return product.price >= min && product.price <= max;
    }
    return product.price >= min;
  });
}

// Obtener categorías únicas
const categories = [...new Set(productsData.map(product => ({
  slug: product.categorySlug,
  name: product.category
})))];

function formatPrice(price: number): string {
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'USD',
    minimumFractionDigits: 2
  }).format(price);
}

function calculateDiscount(price: number, originalPrice?: number): number {
  if (!originalPrice || originalPrice <= price) return 0;
  return Math.round(((originalPrice - price) / originalPrice) * 100);
}
---

<Layout 
  title="Catálogo de Productos - TechStore Pro"
  description={`Explora nuestro catálogo completo de productos tecnológicos. ${filteredProducts.length} productos disponibles: smartphones, laptops gaming, accesorios y más con los mejores precios y envío gratis.`}
  keywords="catálogo productos tecnología, smartphones baratos, laptops gaming, accesorios electrónicos, ofertas tecnología, comprar online México"
  type="website"
>
  <Header />
  <main class="products-page">
    <div class="container">
      <!-- Breadcrumb -->
      <nav class="breadcrumb">
        <a href="/">Inicio</a>
        <span class="separator">›</span>
        <span>Productos</span>
      </nav>

      <!-- Página Header -->
      <div class="page-header">
        <h1 class="page-title">Catálogo de Productos</h1>
        <p class="page-subtitle">
          {searchTerm ? `Resultados para "${searchTerm}"` : 'Todos nuestros productos tecnológicos'}
          ({filteredProducts.length} productos encontrados)
        </p>
      </div>

      <!-- Filtros -->
      <div class="filters-section">
        <div class="filters-container">
          <div class="filter-group">
            <label for="category-filter">Categoría:</label>
            <select id="category-filter" class="filter-select">
              <option value="">Todas las categorías</option>
              {categories.map(category => (
                <option 
                  value={category.slug}
                  selected={categoryFilter === category.slug}
                >
                  {category.name}
                </option>
              ))}
            </select>
          </div>

          <div class="filter-group">
            <label for="price-filter">Precio:</label>
            <select id="price-filter" class="filter-select">
              <option value="">Todos los precios</option>
              <option value="0-200" selected={priceFilter === '0-200'}>Hasta $200</option>
              <option value="200-500" selected={priceFilter === '200-500'}>$200 - $500</option>
              <option value="500-1000" selected={priceFilter === '500-1000'}>$500 - $1000</option>
              <option value="1000" selected={priceFilter === '1000'}>Más de $1000</option>
            </select>
          </div>

          <div class="filter-group">
            <label for="sort-filter">Ordenar por:</label>
            <select id="sort-filter" class="filter-select">
              <option value="featured">Destacados</option>
              <option value="price-low">Precio: Menor a Mayor</option>
              <option value="price-high">Precio: Mayor a Menor</option>
              <option value="name">Nombre A-Z</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Grid de Productos -->
      <div class="products-grid">
        {filteredProducts.map(product => {
          const discount = calculateDiscount(product.price, product.originalPrice);
          
          return (
            <div class="product-card">
              <div class="product-image-container">
                <a href={`/productos/${product.id}`}>
                  <img
                    src={product.images[0]}
                    alt={product.name}
                    class="product-image"
                    loading="lazy"
                  />
                </a>
                {discount > 0 && (
                  <div class="product-badge discount">
                    -{discount}%
                  </div>
                )}
                {product.featured && (
                  <div class="product-badge featured">
                    <i class="fas fa-star"></i>
                  </div>
                )}
                <div class="product-actions-overlay">
                  <button class="action-btn wishlist" title="Agregar a favoritos">
                    <i class="fas fa-heart"></i>
                  </button>
                  <a href={`/productos/${product.id}`} class="action-btn view" title="Ver producto">
                    <i class="fas fa-eye"></i>
                  </a>
                </div>
              </div>
              
              <div class="product-info">
                <div class="product-category">{product.category}</div>
                <h3 class="product-title">
                  <a href={`/productos/${product.id}`}>{product.name}</a>
                </h3>
                <p class="product-description">{product.shortDescription}</p>
                
                <div class="product-price">
                  <span class="current-price">{formatPrice(product.price)}</span>
                  {product.originalPrice && product.originalPrice > product.price && (
                    <span class="original-price">{formatPrice(product.originalPrice)}</span>
                  )}
                </div>
                
                <div class="product-rating">
                  <div class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                  </div>
                  <span class="rating-text">(4.5)</span>
                </div>
                
                <button class="btn btn-primary btn-sm add-to-cart">
                  <i class="fab fa-whatsapp"></i>
                  Consultar
                </button>
                
                {product.stock < 10 && product.stock > 0 && (
                  <div class="stock-warning">
                    Solo quedan {product.stock} unidades
                  </div>
                )}
                
                {product.stock === 0 && (
                  <div class="out-of-stock">
                    Agotado
                  </div>
                )}
              </div>
            </div>
          );
        })}
      </div>

      {filteredProducts.length === 0 && (
        <div class="no-results">
          <div class="no-results-icon">
            <i class="fas fa-search"></i>
          </div>
          <h3>No se encontraron productos</h3>
          <p>Intenta ajustar los filtros o términos de búsqueda.</p>
          <a href="/productos" class="btn btn-primary">
            Ver todos los productos
          </a>
        </div>
      )}
    </div>
  </main>
  <Footer client:load />
</Layout>

<style>
