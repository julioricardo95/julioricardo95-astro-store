  title={`${product.name} - TechStore Pro`}
  description={`${product.description} ‚úÖ Precio: ${formatPrice(product.price)} ‚úÖ Env√≠o gratis ‚úÖ Garant√≠a 2 a√±os ‚úÖ Stock disponible: ${product.stock} unidades`}
  keywords={`${product.name}, ${product.category}, ${product.tags?.join(', ')}, comprar ${product.name}, precio ${product.name}, oferta tecnolog√≠a`}
  image={product.images[0]}
  url={`https://mi-ecommerce.com/productos/${product.id}`}
  type="product"
>
  <Header />
  <main class="product-page">
