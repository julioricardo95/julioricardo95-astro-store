---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ProductCarousel from '../components/ProductCarousel';
import ArticlesSection from '../components/ArticlesSection.astro';
import Footer from '../components/Footer';

// Importar datos de productos
import productsData from '../data/products.json';

// Filtrar productos destacados
const featuredProducts = productsData.filter(product => product.featured);
---

<Layout 
  title="TechStore Pro - Tu Tienda de Tecnología Online"
  description="Descubre los mejores productos tecnológicos al mejor precio. Smartphones, laptops, accesorios gaming y más con envío gratis, garantía de 2 años y soporte 24/7. ¡Ofertas exclusivas!"
  keywords="tienda tecnología, smartphones baratos, laptops gaming, accesorios tecnológicos, ofertas electrónicos, envío gratis México"
  image="https://images.pexels.com/photos/325229/pexels-photo-325229.jpeg?auto=compress&cs=tinysrgb&w=1200"
  type="website"
>
  <Header />
  <main>
    <Hero />
    <ProductCarousel client:load products={featuredProducts} title="Productos Destacados" />
    <ArticlesSection />
  </main>
  <Footer client:load />
</Layout>